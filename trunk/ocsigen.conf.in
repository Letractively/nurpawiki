<ocsigen>
  <server>
    <port>8080</port> <!-- The port for the server -->
    <logdir>%_OCSIGEN_ROOT_%/var/log</logdir> <!-- Where log files are to be written -->
    <datadir>%_OCSIGEN_ROOT_%/var/lib</datadir>

    <user></user> <!-- The user who will run Ocsigen (not root!) -->
    <group></group> <!-- The group (not root!) -->

    <charset>utf-8</charset> <!-- Default charset for pages -->

    <!-- We need static files for icons and CSS -->
    <extension module="%_OCSIGEN_ROOT_%/modules/staticmod.cmo">
      <static dir="%_OCSIGEN_ROOT_%/files"/>
    </extension>

    <library module="%_STR_CMA_%"/>
    <library module="%_PCRE_CMA_%"/>
    <library module="%_CALENDAR_CMA_%"/>
    <library module="%_EXTLIB_CMA_%"/>
    <library module="%_POSTGRESQL_CMA_%"/>

    <!-- Sqlite is needed by ocsipersist, which is used by Eliom: -->
    <extension module="%_SQLITE3_CMA_%"/>

    <extension module="%_OCSIGEN_ROOT_%/modules/ocsipersist-sqlite.cma"/>

    <extension module="%_OCSIGEN_ROOT_%/modules/eliom.cma"/>

    <host>  
    
      <site dir="" charset="utf-8">
        <eliom module="/home/jhellsten/dev/nwiki/nurpawiki/site.cma">
        </eliom>
        <static dir="/home/jhellsten/dev/nwiki/nurpawiki/files" />
      </site>


    </host>

    <commandpipe>%_OCSIGEN_ROOT_%/var/run/ocsigen_command</commandpipe>

  </server>
  
</ocsigen>
